{
    "type": "object",
    "properties": {
        "appid":            { "type": "string",
                              "minLength": 3,
                              "maxLength": 40
                            },
        "crawlid":          { "type": "string",
                              "minLength": 1,
                              "maxLength": 40
                            },
        "spiderid":         { "type": "string",
                              "enum": ["link"],
                              "default": "link"
                            },
        "url":              { "type": "string" },
        "priority":         { "type": "integer",
                                "minimum": 1,
                                "maximum": 100,
                                "default": 1
                            },
        "maxdepth":         { "type": "integer",
                                "minimum": 0,
                                "maximum": 3,
                                "default": 0
                            },
        "allowed_domains":  {
                              "type": "array",
                              "uniqueItems": true,
                              "items": {
                                "type": "string"
                              }
                            },
        "allow_regex":      {
                              "type": "array",
                              "uniqueItems": true,
                              "items": {
                                "type": "string"
                              }
                            },
        "deny_regex":       {
                              "type": "array",
                              "uniqueItems": true,
                              "items": {
                                "type": "string"
                              }
                            },
        "deny_extensions":  {
                              "type": "array",
                              "uniqueItems": true,
                              "items": {
                                "type": "string"
                              }
                            },
        "expires":          { "type": "integer" },
        "useragent":        {
                              "type": "string",
                              "minLength": 3,
                              "maxLength": 1000
                            },
        "attrs":            { "type": "object" }
    },
    "required":             ["appid", "crawlid", "url"],
    "additionalProperties": false
}
